---
interface Props {
  id: string;
}

const { id } = Astro.props;
const url = Astro.url.href;

if (import.meta.env.MODE !== "development") {
  throw new Error(
    "This component can not be used in production",
  );
}
---

<div class="flex justify-center">
  <div>
    <form
      action="/actions/upload"
      method="post"
      enctype="multipart/form-data"
      class="space-y-2"
    >
      <div>
        <div>
          <label for="{`filename-input-${id}`}">Title</label
          >
        </div>
        <input
          type="text"
          class="text-black p-2"
          name="title"
          id="title"
          required
        />
      </div>

      <div>
        <div>
          <label for="title">Description</label>
        </div>
        <input
          type="text"
          class="text-black p-2"
          name="description"
          id="description"
          required
        />
      </div>
      <div>
        <div>
          <label for="blog">Blog Post</label>
        </div>
        <textarea
          class="text-black p-2 h-[200px] w-[400px]"
          name="blog"
          id="{`filename-input-${id}`}"
          required></textarea>
      </div>
      <div>
        <label for="{`file-input-${id}`}">Thumbnail</label>
        <input
          class="text-black"
          type="file"
          name="file"
          required
          id="{`file-input-${id}`}"
          accept="image/png, image/jpeg"
        />
      </div>
    </form>
    <div class="w-full flex justify-center pt-4">
      <button type="submit" class="border p-2">
        Upload Blog Post
        <!-- <input type="submit" value="Upload image" /> -->
      </button>
    </div>
  </div>
</div>

<script>
  const form = document.querySelector("form")!;

  form.addEventListener("submit", async (event) => {
    event.preventDefault();
    const formData = new FormData(form);
    const response = await fetch(form.action, {
      method: form.method,
      body: formData,
    });

    if (!response.ok) {
      console.error("Failed to upload image");
    }
  });
</script>
