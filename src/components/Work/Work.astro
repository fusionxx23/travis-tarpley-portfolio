---
import SectionHeader from "../UI/SectionHeader.astro";
---

<div
  id="Work"
  class="border-black/30 bg-background w-full border-t-2 pt-8"
>
  <SectionHeader title="Work" />
  <div class="flex justify-center pt-8">
    <div class="bg-purple-300/30 p-2 rounded-sm">
      <span>Experience.</span>
    </div>
  </div>
  <div class="gap-x-4 relative">
    <div
      class="absolute h-full w-[2px] left-1/2 bg-purple-300/30"
    >
    </div>
    <div class="justify-start flex">
      <div>
        <h3 class="font-medium text-xl">
          Frontend Developer
        </h3>
        <p class="text-gray-400 pt-2">
          SIR Trading - 2024/08 - Present
        </p>
      </div>
    </div>

    <div class="flex justify-end">
      <div>
        <h3 class="font-medium text-xl">
          Frontend Developer
        </h3>
        <p class="text-gray-400 pt-2">
          SIR Trading - 2024/08 - Present
        </p>
      </div>
    </div>
  </div>
</div>

<script>
  import Observer from "../../utils/observer";
  const workContainer = document.querySelector("#work");
  if (workContainer) {
    Observer(workContainer);
  }
</script>
