---
import Github from "@/components/UI/icons/github.astro";
import Linkedin from "@/components/UI/icons/linkedin.astro";
import X from "@/components/UI/icons/x.astro";
---

<footer class="flex-grow z-10 flex items-end">
  <div class="flex justify-center w-full pt-8">
    <div>
      <div class="py-4 px-10">
        <h2
          class="text-center text-lg md:text-xl font-bold"
        >
          Let's Connect!
        </h2>
        <p
          class="text-gray-300 text-sm md:text-md text-center pt-4"
        >
          Feel free to reach out and connect with me.
        </p>
        <div class="flex justify-around py-6">
          <a href="https://github.com">
            <Github />
          </a>
          <a href="https://linkedin.com">
            <Linkedin />
          </a>
          <a href="https://x.com">
            <X />
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>
