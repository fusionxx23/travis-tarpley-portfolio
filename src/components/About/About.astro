---
import SectionHeader from "@components/UI/SectionHeader.astro";
import Anim from "../LogoAnimated3D.astro";
---

<div id="About">
  <SectionHeader title="About" />
  <div class="lg:w-[600px] mx-auto pt-4">
    <div>
      <h2 class="font-bold text-xl py-6">
        Get to Know <span class="text-purple-300">
          Me.
        </span>
      </h2>
      <div class="space-y-4 text-gray-100">
        <p class="text-gray-200 text-[16px]">
          I am a skilled full-stack developer with over <strong
            >3 years</strong
          > of experience crafting robust and efficient applications.
        </p>
        <p>
          My expertise lies in building scalable web
          solutions using various web frameworks like <strong
            >Next.js</strong
          > or
          <strong>Astro.js</strong> with a strong focus on Web3
          technologies, including smart contract development,
          and blockchain integrations.
        </p>
      </div>
    </div>

    <div class="pt-8">
      <h2 class="font-bold text-xl pt-4 pb-6">
        Some of My <span class="text-purple-300 px-0">
          Skills.
        </span>
      </h2>
      <div class="space-y-3">
        <div class="md:flex justify-between">
          <div>
            <span class="font-bold text-lg text-white pr-4"
              >Languages</span
            >
          </div>
          <div>Typescript, Solidity, Go, Rust, Graphql</div>
        </div>
        <div class="md:flex justify-between">
          <div>
            <span class="font-bold text-lg text-white pr-4"
              >Frameworks</span
            >
          </div>
          <div>
            Next.js, Remix, Astro, Solidjs, Vite + React
          </div>
        </div>

        <div class="md:flex justify-between">
          <div>
            <span class="font-bold text-lg text-white pr-4"
              >Cloud</span
            >
          </div>
          <div>
            S3, Lambda, Cloudfront, RDS, CDK, EC2, Api
            Gateway, Vercel
          </div>
        </div>

        <div class="md:flex justify-between">
          <div>
            <span class="font-bold text-lg text-white pr-4"
              >Tools</span
            >
          </div>
          <div>Vite, Docker, Vitest, Jest, Cypress</div>
        </div>

        <div class="md:flex justify-between">
          <div>
            <span class="font-bold text-lg text-white pr-4"
              >Libraries</span
            >
          </div>
          <div>
            Tailwind, React Hook Form, Tanstack Query,
            Threejs
          </div>
        </div>
      </div>
    </div>

    <div class="flex pt-8 justify-center">
      <div class="h-24 w-24">
        <Anim />
      </div>
    </div>
  </div>
</div>
